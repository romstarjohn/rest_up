{
  "name": "projweb2-project",
  "version": "0.0.2",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "dev": "cross-env DEBUG=projweb2-project:* nodemon ./bin/www",
    "test": "cross-env NODE_ENV=test jest --testTimeout=10000",
    "eslint": "eslint \"**/*.js\" --ignore-pattern node_modules/",
    "stylelint": "stylelint \"**/*.css\" --ignore-pattern node_modules/"
  },
  "dependencies": {
    "cookie-parser": "^1.4.5",
    "debug": "^4.3.1",
    "ejs": "^3.1.5",
    "express": "^4.17.1",
    "express-validator": "^6.10.0",
    "http-errors": "^1.8.0",
    "jquery": "^3.6.0",
    "livereload": "^0.9.1",
    "morgan": "^1.10.0",
    "node-geocoder": "^3.27.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^7.17.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-jest": "^24.1.3",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "stylelint": "^13.8.0",
    "stylelint-config-recommended": "^3.0.0",
    "supertest": "^6.0.1"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "commonjs": true,
      "es2021": true,
      "es6": true,
      "jest/globals": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "google",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 12
    },
    "plugins": [
      "jest"
    ],
    "rules": {
      "require-jsdoc": "off"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true
  },
  "stylelint": {
    "extends": "stylelint-config-recommended",
    "rules": {
      "no-empty-source": null
    }
  }
}
